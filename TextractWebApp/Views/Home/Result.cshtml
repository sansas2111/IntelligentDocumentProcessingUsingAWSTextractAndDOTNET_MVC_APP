@model DocumentViewModel
@{
    ViewData["Title"] = "Extraction Results";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">Text Extraction Results</h2>
                </div>
                <div class="card-body">
                    @if (Model.ExtractedText != null && Model.ExtractedText.Any())
                    {
                        <div class="bg-light p-3 rounded">
                            @foreach (var line in Model.ExtractedText)
                            {
                                <p class="mb-2">@line</p>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No text was extracted from the document.
                        </div>
                    }
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="bi bi-arrow-left"></i> Process Another Document
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
