@model DocumentViewModel
@{
    ViewData["Title"] = "Document Text Extraction";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Document Text Extraction</h2>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-action="Upload">
                        <div class="mb-3">
                            <label class="form-label">Select Document (PDF or Image)</label>
                            <input type="file" class="form-control" asp-for="Document" accept="application/pdf,image/*"
                                required>
                            <span asp-validation-for="Document" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-cloud-upload"></i> Upload & Extract Text
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

        
    